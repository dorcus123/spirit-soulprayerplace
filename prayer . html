    <script>
        // Prayer data storage
        let prayers = [];
        
        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            loadPrayers();
            updateCountdown();
            setInterval(updateCountdown, 1000);
        });

        // Load prayers from localStorage
        function loadPrayers() {
            const stored = localStorage.getItem('prayerRequests');
            if (stored) {
                prayers = JSON.parse(stored);
            } else {
                // Default prayers
                prayers = [
                    {
                        id: Date.now() - 7200000,
                        author: 'Sarah M.',
                        category: 'Healing & Health',
                        text: 'Please pray for my mother\'s surgery tomorrow. We trust in God\'s healing power and the wisdom of the medical team.',
                        timestamp: Date.now() - 7200000,
                        prayers: 47,
                        prayedBy: []
                    },
                    {
                        id: Date.now() - 18000000,
                        author: 'Anonymous',
                        category: 'Financial Breakthrough',
                        text: 'Seeking breakthrough in my finances. Trusting God for provision and wisdom in managing resources.',
                        timestamp: Date.now() - 18000000,
                        prayers: 32,
                        prayedBy: []
                    },
                    {
                        id: Date.now() - 86400000,
                        author: 'David K.',
                        category: 'Thanksgiving & Praise',
                        text: 'Thank you Jesus for answered prayer! My daughter accepted the job offer. God is faithful!',
                        timestamp: Date.now() - 86400000,
                        prayers: 89,
                        prayedBy: []
                    }
                ];
            }
            renderPrayers();
        }

        // Save prayers to localStorage
        function savePrayers() {
            localStorage.setItem('prayerRequests', JSON.stringify(prayers));
        }

        // Render prayers on the wall
        function renderPrayers() {
            const prayerList = document.getElementById('prayer-list');
            
            if (prayers.length === 0) {
                prayerList.innerHTML = '<div class="empty-state">No prayer requests yet. Be the first to share!</div>';
                return;
            }

            // Sort by timestamp (newest first)
            prayers.sort((a, b) => b.timestamp - a.timestamp);

            prayerList.innerHTML = prayers.map(prayer => {
                const timeAgo = getTimeAgo(prayer.timestamp);
                const isPraised = prayer.prayedBy.includes(getUserId());
                const buttonText = prayer.category === 'Thanksgiving & Praise' ? 'üôå Praise God!' : 'üôè I\'m Praying';
                const countText = prayer.category === 'Thanksgiving & Praise' ? 
                    `${prayer.prayers} people celebrating` : 
                    `${prayer.prayers} people praying`;

                return `
                    <div class="prayer-item">
                        <div class="prayer-header">
                            <span class="prayer-author">${prayer.author}</span>
                            <span class="prayer-date">${timeAgo}</span>
                        </div>
                        <div class="prayer-category">${prayer.category}</div>
                        <div class="prayer-text">${prayer.text}</div>
                        <div class="prayer-actions">
                            <button class="pray-btn" 
                                    onclick="prayFor(${prayer.id})" 
                                    ${isPraised ? 'disabled' : ''}>
                                ${isPraised ? '‚úì Praying' : buttonText}
                            </button>
                            <span class="pray-count">${countText}</span>
                        </div>
                    </div>
                `;
            }).join('');
        }

        // Get time ago string
        function getTimeAgo(timestamp) {
            const seconds = Math.floor((Date.now() - timestamp) / 1000);
            
            if (seconds < 60) return 'just now';
            if (seconds < 3600) return Math.floor(seconds / 60) + ' minutes ago';
            if (seconds < 7200) return '1 hour ago';
            if (seconds < 86400) return Math.floor(seconds / 3600) + ' hours ago';
            if (seconds < 172800) return '1 day ago';
            return Math.floor(seconds / 86400) + ' days ago';
        }

        // Get or create user ID
        function getUserId() {
            let userId = localStorage.getItem('userId');
            if (!userId) {
                userId = 'user_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9);
                localStorage.setItem('userId', userId);
            }
            return userId;
        }

        // Show notification
        function showNotification(message) {
            const notification = document.getElementById('notification');
            notification.innerHTML = message;
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }

        // Countdown Timer
        function updateCountdown() {
            const now = new Date();
            
            // Create next session time for 5:00 AM PST (which is 8:00 AM EST / 13:00 UTC)
            let nextSession = new Date();
            
            // Set to 5:00 AM PST today (13:00 UTC)
            nextSession.setUTCHours(13, 0, 0, 0);
            
            // If it's already past 5:00 AM PST today, set for tomorrow
            if (now >= nextSession) {
                nextSession.setDate(nextSession.getDate() + 1);
                nextSession.setUTCHours(13, 0, 0, 0);
            }
            
            const timeDiff = nextSession - now;
            
            const days = Math.floor(timeDiff / (1000 * 60 * 60 * 24));
            const hours = Math.floor((timeDiff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((timeDiff % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((timeDiff % (1000 * 60)) / 1000);
            
            document.getElementById('days').textContent = String(days).padStart(2, '0');
            document.getElementById('hours').textContent = String(hours).padStart(2, '0');
            document.getElementById('minutes').textContent = String(minutes).padStart(2, '0');
            document.getElementById('seconds').textContent = String(seconds).padStart(2, '0');
        }
        
        // Join Session
        function joinSession() {
            showNotification('üôè Opening live prayer session...<br><small>In a production app, this would connect to Zoom or YouTube Live</small>');
        }
        
        // Prayer Request Form
        document.getElementById('prayer-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const name = document.getElementById('name').value.trim();
            const category = document.getElementById('category').value;
            const request = document.getElementById('request').value.trim();
            const anonymous = document.getElementById('anonymous').checked;
            const publicPost = document.getElementById('public').checked;
            
            if (!category) {
                showNotification('‚ùå Please select a prayer category');
                return;
            }
            
            if (!request) {
                showNotification('‚ùå Please enter your prayer request');
                return;
            }

            // Create new prayer object
            const newPrayer = {
                id: Date.now(),
                author: anonymous ? 'Anonymous' : (name || 'Anonymous'),
                category: category,
                text: request,
                timestamp: Date.now(),
                prayers: 0,
                prayedBy: []
            };

            // Add to wall if public
            if (publicPost) {
                prayers.unshift(newPrayer);
                savePrayers();
                renderPrayers();
                
                // Scroll to prayer wall
                document.getElementById('wall').scrollIntoView({ behavior: 'smooth' });
            }

            // Show success message
            showNotification('‚úÖ Prayer Request Submitted!<br><small>Your request has been received and our prayer team will be interceding for you.</small>');
            
            // Reset form
            this.reset();
            document.getElementById('anonymous').checked = true;
            document.getElementById('public').checked = true;
        });
        
        // Pray For Button
        function prayFor(prayerId) {
            const prayer = prayers.find(p => p.id === prayerId);
            if (!prayer) return;

            const userId = getUserId();
            
            // Check if already prayed
            if (prayer.prayedBy.includes(userId)) {
                showNotification('You\'re already praying for this request! üôè');
                return;
            }

            // Add user to prayed list
            prayer.prayedBy.push(userId);
            prayer.prayers++;

            // Save and re-render
            savePrayers();
            renderPrayers();

            // Show confirmation
            showNotification('üôè Thank you for praying!<br><small>God hears every prayer</small>');
        }

        // Smooth scrolling for navigation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });
    </script>
</body>
</html>
